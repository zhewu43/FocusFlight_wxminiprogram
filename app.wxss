/**app.wxss**/
/* 全局样式 */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  line-height: 1.6;
  color: #333;
}

/* 通用容器 */
.container {
  box-sizing: border-box;
}

/* 通用按钮样式 */
.btn {
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.2s ease;
}

.btn:active {
  transform: translateY(2rpx);
  opacity: 0.8;
}

.btn-primary {
  background: linear-gradient(45deg, #1890ff, #40a9ff);
  color: white;
  border: none;
}

.btn-secondary {
  background: #f5f5f5;
  color: #666;
  border: 1rpx solid #d9d9d9;
}

/* 通用卡片样式 */
.card {
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

/* 通用文本样式 */
.text-primary {
  color: #1890ff;
}

.text-secondary {
  color: #666;
}

.text-muted {
  color: #999;
}

.text-success {
  color: #52c41a;
}

.text-warning {
  color: #faad14;
}

.text-error {
  color: #ff4d4f;
}

/* 通用间距 */
.mt-10 { margin-top: 10rpx; }
.mt-20 { margin-top: 20rpx; }
.mt-30 { margin-top: 30rpx; }
.mt-40 { margin-top: 40rpx; }

.mb-10 { margin-bottom: 10rpx; }
.mb-20 { margin-bottom: 20rpx; }
.mb-30 { margin-bottom: 30rpx; }
.mb-40 { margin-bottom: 40rpx; }

.ml-10 { margin-left: 10rpx; }
.ml-20 { margin-left: 20rpx; }
.mr-10 { margin-right: 10rpx; }
.mr-20 { margin-right: 20rpx; }

.p-10 { padding: 10rpx; }
.p-20 { padding: 20rpx; }
.p-30 { padding: 30rpx; }
.p-40 { padding: 40rpx; }

/* 通用布局 */
.flex {
  display: flex;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-1 {
  flex: 1;
}

/* 通用文本对齐 */
.text-left { text-align: left; }
.text-center { text-align: center; }
.text-right { text-align: right; }

/* 通用字体大小 */
.text-xs { font-size: 20rpx; }
.text-sm { font-size: 24rpx; }
.text-base { font-size: 28rpx; }
.text-lg { font-size: 32rpx; }
.text-xl { font-size: 36rpx; }
.text-2xl { font-size: 40rpx; }
.text-3xl { font-size: 48rpx; }

/* 通用字体粗细 */
.font-normal { font-weight: normal; }
.font-medium { font-weight: 500; }
.font-bold { font-weight: bold; }

/* 通用圆角 */
.rounded-sm { border-radius: 4rpx; }
.rounded { border-radius: 8rpx; }
.rounded-lg { border-radius: 16rpx; }
.rounded-xl { border-radius: 20rpx; }
.rounded-full { border-radius: 50%; }

/* 通用阴影 */
.shadow-sm {
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.shadow {
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.shadow-lg {
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.15);
}

/* 通用边框 */
.border {
  border: 1rpx solid #e8e8e8;
}

.border-t {
  border-top: 1rpx solid #e8e8e8;
}

.border-b {
  border-bottom: 1rpx solid #e8e8e8;
}

.border-l {
  border-left: 1rpx solid #e8e8e8;
}

.border-r {
  border-right: 1rpx solid #e8e8e8;
}

/* 通用背景色 */
.bg-white { background-color: white; }
.bg-gray-50 { background-color: #fafafa; }
.bg-gray-100 { background-color: #f5f5f5; }
.bg-primary { background-color: #1890ff; }
.bg-success { background-color: #f6ffed; }
.bg-warning { background-color: #fffbe6; }
.bg-error { background-color: #fff2f0; }

/* 通用隐藏/显示 */
.hidden { display: none !important; }
.visible { display: block !important; }

/* 通用定位 */
.relative { position: relative; }
.absolute { position: absolute; }
.fixed { position: fixed; }

/* 通用层级 */
.z-10 { z-index: 10; }
.z-20 { z-index: 20; }
.z-30 { z-index: 30; }
.z-50 { z-index: 50; }
.z-100 { z-index: 100; }

/* 通用溢出处理 */
.overflow-hidden { overflow: hidden; }
.overflow-scroll { overflow: scroll; }

/* 通用宽高 */
.w-full { width: 100%; }
.h-full { height: 100%; }

/* 通用透明度 */
.opacity-50 { opacity: 0.5; }
.opacity-75 { opacity: 0.75; }
.opacity-90 { opacity: 0.9; }

/* 通用过渡动画 */
.transition {
  transition: all 0.2s ease;
}

.transition-fast {
  transition: all 0.1s ease;
}

.transition-slow {
  transition: all 0.3s ease;
}