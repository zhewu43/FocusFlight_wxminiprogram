/* pages/focus/focus.wxss */
.container {
  padding: 40rpx 20rpx;
  background: linear-gradient(180deg, #4facfe 0%, #00f2fe 100%);
  min-height: 100vh;
  position: relative;
}

.flight-header {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  text-align: center;
  backdrop-filter: blur(10rpx);
}

.flight-route {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 20rpx;
}

.city-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  text-align: center;
}

.flight-arrow {
  margin: 0 30rpx;
  position: relative;
}

.arrow {
  font-size: 40rpx;
  color: #1890ff;
}

.plane-icon {
  position: absolute;
  top: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  font-size: 30rpx;
  animation: fly 2s ease-in-out infinite;
}

@keyframes fly {
  0%, 100% { transform: translateX(-50%) translateY(0); }
  50% { transform: translateX(-50%) translateY(-10rpx); }
}

.flight-details {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #666;
}

.focus-status {
  text-align: center;
  margin-bottom: 60rpx;
}

.status-text {
  font-size: 32rpx;
  color: white;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.altitude {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.timer-display {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.time-text {
  text-align: center;
  margin-bottom: 40rpx;
}

.time-main {
  display: block;
  font-size: 80rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.3);
  margin-bottom: 10rpx;
}

.time-label {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 竖线进度条样式 */
.vertical-progress {
  display: flex;
  align-items: center;
  width: 100%;
  max-width: 500rpx;
}

.progress-track {
  position: relative;
  width: 4rpx;
  height: 400rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 2rpx;
  margin: 0 40rpx;
  flex: 1;
}

.progress-bar {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  background: linear-gradient(to top, #1890ff, #40a9ff);
  border-radius: 2rpx;
  transition: height 0.3s ease;
}

.progress-indicator {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  transition: bottom 0.3s ease;
}

.plane-indicator {
  display: block;
  font-size: 40rpx;
  transform: rotate(-90deg);
  filter: drop-shadow(0 2rpx 8rpx rgba(0, 0, 0, 0.3));
}

.progress-labels {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 400rpx;
  font-size: 28rpx;
  color: white;
  font-weight: bold;
}

.start-label {
  align-self: flex-start;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
  order: 2;
}

.end-label {
  align-self: flex-end;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
  order: 1;
}

.progress-info {
  display: flex;
  justify-content: space-around;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 60rpx;
  backdrop-filter: blur(10rpx);
}

.progress-item {
  text-align: center;
}

.progress-label {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 8rpx;
}

.progress-value {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: white;
}

.control-buttons {
  position: fixed;
  bottom: 40rpx;
  left: 20rpx;
  right: 20rpx;
  display: flex;
  gap: 20rpx;
}

.control-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
}

.pause-btn {
  background: linear-gradient(45deg, #ffa726, #ff9800);
  color: white;
}

.stop-btn {
  background: linear-gradient(45deg, #ef5350, #f44336);
  color: white;
}

.complete-btn {
  background: linear-gradient(45deg, #66bb6a, #4caf50);
  color: white;
}

.control-btn:active {
  transform: translateY(2rpx);
}

/* 完成庆祝动画 */
.celebration {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  animation: fadeIn 0.5s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.celebration-content {
  background: white;
  border-radius: 30rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  max-width: 600rpx;
  animation: bounceIn 0.6s ease;
}

@keyframes bounceIn {
  0% {
    transform: scale(0.3);
    opacity: 0;
  }
  50% {
    transform: scale(1.05);
  }
  70% {
    transform: scale(0.9);
  }
  100% {
    transform: scale(1);
    opacity: 1;
  }
}

.celebration-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 20rpx;
  animation: bounce 1s ease infinite;
}

@keyframes bounce {
  0%, 20%, 53%, 80%, 100% {
    transform: translate3d(0, 0, 0);
  }
  40%, 43% {
    transform: translate3d(0, -30rpx, 0);
  }
  70% {
    transform: translate3d(0, -15rpx, 0);
  }
  90% {
    transform: translate3d(0, -4rpx, 0);
  }
}

.celebration-title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.celebration-subtitle {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 40rpx;
}

.celebration-stats {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  text-align: center;
}

.stat-value {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #1890ff;
  margin-bottom: 8rpx;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #999;
}